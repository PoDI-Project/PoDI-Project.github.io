      <a href="#goals" onclick="scrollToSection('goals')" class="block capitalize hover:text-blue-400 transition-colors">Goals</a>
      <a href="#architecture" onclick="scrollToSection('architecture')" class="block capitalize hover:text-blue-400 transition-colors">Architecture</a>
      <a href="#technology" onclick="scrollToSection('technology')" class="block capitalize hover:text-blue-400 transition-colors">Technology</a>
      <a href="#why" onclick="scrollToSection('why')" class="block capitalize hover:text-blue-400 transition-colors">Why PoDIChain</a>
